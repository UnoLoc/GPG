{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Manager Proportions by Gender (2020)",
    "width": 600,
    "height": 280,
    "data": {
        "url": "data/managers_by_gender_2020.json"
    },
    "mark": "bar",
    "encoding": {
        "x": {
            "aggregate": "sum",
            "field": "proportion",
            "axis": null
        },
        "y": {
            "field": "type",
            "sort": "-x",
            "title": "Manager Type"
        },
        "color": {
            "field": "gender",
            "legend": {
                "title": "Gender"
            }
        },
        "tooltip": [
            {
                "field": "gender",
                "type": "nominal",
                "title": "Gender"
            },
            {
                "field": "proportion",
                "type": "quantitative",
                "format": ".2f",
                "title": "Proportion (%)"
            }
        ]
    }
}