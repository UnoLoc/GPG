{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Wage Gender Gap Over Time",
  "width": 300,
  "height": 200,
  "data": {
    "url": "data/gap_over_time_data.json"
  },
  "transform": [
    {
      "calculate": "1 - (datum.gap / 100)",
      "as": "gap_by_dollar"
    }
  ],
  "encoding": {
    "tooltip": [
      {
        "field": "type",
        "type": "nominal",
        "title": "Category"
      },
      {
        "field": "year",
        "type": "nominal",
        "title": "Year"
      },
      {
        "field": "gap_by_dollar",
        "type": "quantitative",
        "title": "Wage Gap ($)",
        "format": ".2f"
      }
    ]
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "year",
          "type": "nominal",
          "title": "Year",
          "axis": {
            "labelAngle": 0
          }
        },
        "y": {
          "field": "gap_by_dollar",
          "type": "quantitative",
          "title": "Wage Gap ($)",
          "scale": {
            "domainMax": 1.1,
            "domainMin": 0
          },
          "axis": {
            "tickMinStep": 0.1,
            "format": ".2f"
          }
        },
        "color": {
          "field": "type",
          "title": "Category",
          "scale": {
            "domain": [
              "Overall",
              "Managers",
              "Non-Managers"
            ],
            "range": [
              "#242424",
              "#4477AA",
              "#228833"
            ]
          }
        }
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "y": {
          "field": "baseline",
          "aggregate": "mean"
        },
        "tooltip": {
          "value": "Male Wage Baseline"
        }
      }
    }
  ]
}